<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="#AAAAAA"
                android:width="1dp"/>
            <gradient
                android:startColor="#272727"
                android:centerColor="#414141"
                android:endColor="#535353"
                android:angle="270" />
            <corners
                android:radius="14dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#AAAAAA"
                android:width="2dp"/>
            <gradient
                android:startColor="#535353"
                android:centerColor="#414141"
                android:endColor="#272727"
                android:angle="270" />
            <corners
                android:radius="14dp" />
        </shape>
    </item>

</selector>







